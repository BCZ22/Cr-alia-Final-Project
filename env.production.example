# Configuration de Production - Crealia
# =====================================

# Base de donn√©es
DATABASE_URL="postgresql://crealia:${POSTGRES_PASSWORD}@postgres:5432/crealia?schema=public"
POSTGRES_DB=crealia
POSTGRES_USER=crealia
POSTGRES_PASSWORD=your_secure_password_here

# Redis
REDIS_URL="redis://redis:6379"

# API Keys - IA
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# APIs Social Media
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=crealia-production

# MinIO (Alternative S3)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=crealia-media

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Performance
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Video Processing
FFMPEG_PATH=/usr/bin/ffmpeg
MAX_VIDEO_SIZE=500MB
MAX_CONCURRENT_RENDERS=5

# WebSocket
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true



