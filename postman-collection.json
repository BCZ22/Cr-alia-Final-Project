              "raw": "{\n  \"type\": \"PERFORMANCE\",\n  \"period\": \"MONTHLY\",\n  \"platforms\": [\"INSTAGRAM\", \"FACEBOOK\", \"TWITTER\"],\n  \"format\": \"PDF\",\n  \"includeInsights\": true\n}"
