    {
      "name": "Analytics",
      "item": [
        {
          "name": "Get Analytics Overview",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/analytics/overview?from=2024-01-01&to=2024-01-31&platform=INSTAGRAM",
              "host": ["{{base_url}}"],
              "path": ["analytics", "overview"],
              "query": [
                {
                  "key": "from",
                  "value": "2024-01-01"
                },
                {
                  "key": "to",
                  "value": "2024-01-31"
                },
                {
                  "key": "platform",
                  "value": "INSTAGRAM"
                }
              ]
            }
          },
          "response": []
        },
