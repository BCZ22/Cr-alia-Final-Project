    {
      "name": "Jobs & Status",
      "item": [
        {
          "name": "Get Job Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/jobs/{{job_id}}",
              "host": ["{{base_url}}"],
              "path": ["jobs", "{{job_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Cancel Job",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/jobs/{{job_id}}/cancel",
