# =============================================================================
# CONFIGURATION ENVIRONNEMENT CREALIA - DÉVELOPPEMENT
# =============================================================================

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
HOSTNAME=localhost
APP_VERSION=1.0.0

# URLs de base
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Base de données PostgreSQL
DATABASE_URL=postgresql://crealia:crealia_password@localhost:5432/crealia

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket
WEBSOCKET_PORT=3000
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=true

# Security
HELMET_ENABLED=true
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# S3/MinIO Storage
S3_BUCKET_NAME=crealia-assets
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
S3_ENDPOINT=http://localhost:9000
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=crealia-media

# AI Services
HUGGINGFACE_API_KEY=your-huggingface-key
REPLICATE_API_KEY=your-replicate-key
STABILITY_API_KEY=your-stability-key
OPENAI_API_KEY=your-openai-key
COHERE_API_KEY=your-cohere-api-key

# Social Media APIs
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/instagram/callback

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/auth/facebook/callback
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=http://localhost:3000/auth/twitter/callback
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:3000/auth/tiktok/callback

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

PINTEREST_CLIENT_ID=your-pinterest-client-id
PINTEREST_CLIENT_SECRET=your-pinterest-client-secret
PINTEREST_REDIRECT_URI=http://localhost:3000/auth/pinterest/callback

# WebRTC
WEBRTC_TURN_SERVERS=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_CREDENTIAL=

# Performance & Monitoring
PERFORMANCE_MONITORING=true
METRICS_RETENTION_DAYS=30
HEALTH_CHECK_INTERVAL=30000
MAX_CONNECTIONS=1000
MAX_USERS_PER_PROJECT=50

# Monitoring Services
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Video Processing
FFMPEG_PATH=/usr/bin/ffmpeg
MAX_VIDEO_SIZE=500MB
MAX_CONCURRENT_RENDERS=5

# Development
NEXT_TELEMETRY_DISABLED=1

