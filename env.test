# =============================================================================
# CONFIGURATION DE TEST
# =============================================================================

# Environnement
NODE_ENV=test
PORT=3001

# =============================================================================
# BASE DE DONNÉES DE TEST
# =============================================================================

# PostgreSQL de test
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/video_ai_saas_test"
TEST_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/video_ai_saas_test"

# =============================================================================
# REDIS DE TEST
# =============================================================================

# Redis de test (base 1 pour éviter les conflits)
REDIS_URL="redis://localhost:6379/1"
TEST_REDIS_URL="redis://localhost:6379/1"

# =============================================================================
# AUTHENTIFICATION DE TEST
# =============================================================================

# JWT de test
JWT_SECRET="test-jwt-secret-super-securise-pour-les-tests"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="24h"

# =============================================================================
# IA & MACHINE LEARNING DE TEST
# =============================================================================

# OpenAI de test
OPENAI_API_KEY="sk-test-openai-key-for-testing"
OPENAI_MODEL="gpt-4o-mini"
OPENAI_MAX_TOKENS=1000

# HuggingFace de test
HUGGINGFACE_API_KEY="hf-test-huggingface-key-for-testing"
HUGGINGFACE_MODEL="microsoft/DialoGPT-medium"

# =============================================================================
# STOCKAGE DE TEST
# =============================================================================

# AWS S3 de test
AWS_ACCESS_KEY_ID="test-aws-access-key"
AWS_SECRET_ACCESS_KEY="test-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="test-video-ai-saas-bucket"
AWS_S3_ENDPOINT="http://localhost:9000"

# Cloudflare R2 de test
CLOUDFLARE_ACCOUNT_ID="test-cloudflare-account-id"
CLOUDFLARE_API_TOKEN="test-cloudflare-api-token"
CLOUDFLARE_R2_BUCKET="test-video-ai-saas-bucket"
CLOUDFLARE_R2_ENDPOINT="https://test-account-id.r2.cloudflarestorage.com"

# =============================================================================
# TRAITEMENT VIDÉO DE TEST
# =============================================================================

# FFmpeg de test
FFMPEG_PATH="/usr/bin/ffmpeg"
FFMPEG_THREADS=2
FFMPEG_TIMEOUT=60000

# Limites de fichiers de test (plus restrictives)
MAX_FILE_SIZE=10485760  # 10MB en bytes
MAX_VIDEO_DURATION=300   # 5 minutes en secondes
ALLOWED_VIDEO_FORMATS="mp4,avi,mov,mkv,webm,flv"

# =============================================================================
# GÉNÉRATION DE CONTENU DE TEST
# =============================================================================

# Thumbnails de test
THUMBNAIL_WIDTH=640
THUMBNAIL_HEIGHT=360
THUMBNAIL_QUALITY=80
THUMBNAIL_COUNT=3

# Shorts/Reels de test
SHORT_DURATION=30
REEL_DURATION=45
STORY_DURATION=10

# =============================================================================
# MÉTRIQUES & MONITORING DE TEST
# =============================================================================

# Prometheus de test
PROMETHEUS_PORT=9091
PROMETHEUS_PATH="/metrics"

# Logs de test
LOG_LEVEL="error"
LOG_FORMAT="json"

# =============================================================================
# SÉCURITÉ DE TEST
# =============================================================================

# Rate Limiting de test
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=10

# CORS de test
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
CORS_CREDENTIALS=true

# =============================================================================
# DÉVELOPPEMENT DE TEST
# =============================================================================

# MinIO de test
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="test-video-ai-saas"

# =============================================================================
# NOTIFICATIONS DE TEST
# =============================================================================

# Email de test
SENDGRID_API_KEY="test-sendgrid-api-key"
SENDGRID_FROM_EMAIL="test@test-domain.com"

# Slack de test
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/test/test/test"
SLACK_CHANNEL="#test-video-ai-alerts"

