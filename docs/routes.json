    },
    {
      "path": "/ai/avatar",
      "component": "AvatarCreatorPage",
      "public": false,
      "guards": ["auth", "subscription"],
      "targetEndpoints": ["/api/ai/avatar/generate"]
    },
    {
      "path": "/ai/images",
      "component": "ImageGeneratorPage",
      "public": false,
      "guards": ["auth", "subscription"],
      "targetEndpoints": ["/api/ai/images/generate"]
    },
    {
      "path": "/ai/voiceover",
      "component": "VoiceoverGeneratorPage",
      "public": false,
      "guards": ["auth", "subscription"],
      "targetEndpoints": ["/api/ai/voiceover/generate"]
    },
    {
      "path": "/ai/subtitles",
      "component": "SubtitlesGeneratorPage",
      "public": false,
      "guards": ["auth", "subscription"],
      "targetEndpoints": ["/api/ai/subtitles/generate"]
    },
    {
      "path": "/ai/memes",
      "component": "MemesGeneratorPage",
      "public": false,
      "guards": ["auth", "subscription"],
      "targetEndpoints": ["/api/ai/memes/generate"]
    },
    {
      "path": "/dashboard",
      "component": "DashboardPage",
      "public": false,
      "guards": ["auth"],
      "targetEndpoints": ["/api/user/profile", "/api/user/usage"]
    },
    {
      "path": "/account",
      "component": "AccountPage",
      "public": false,
      "guards": ["auth"],
      "targetEndpoints": ["/api/user/update", "/api/user/delete"]
    }
  ],
  "apiEndpoints": [
    {
      "path": "/api/health",
      "method": "GET",
      "auth": false,
      "description": "Health check endpoint"
    },
    {
      "path": "/api/create-checkout-session",
      "method": "POST",
      "auth": true,
      "description": "Create Stripe checkout session",
      "body": {
        "user_id": "string",
        "plan_id": "string",
        "billing_cycle": "monthly|yearly",
        "success_url": "string",
        "cancel_url": "string"
      }
    },
    {
      "path": "/api/stripe-webhook",
      "method": "POST",
      "auth": false,
      "description": "Stripe webhook handler",
      "events": ["checkout.session.completed", "invoice.payment_succeeded", "customer.subscription.updated"]
    },
    {
      "path": "/api/chat/create-session",
      "method": "POST",
      "auth": false,
      "description": "Create chat session"
    },
    {
      "path": "/api/chat/message",
      "method": "POST",
      "auth": false,
      "description": "Send chat message",
      "body": {
        "chat_session_id": "string",
        "user_id": "string|null",
        "message": "string"
      }
    },
    {
      "path": "/api/chat/history",
      "method": "GET",
      "auth": false,
      "description": "Get chat history",
      "query": {
        "session_id": "string"
      }
    },
    {
      "path": "/api/faq",
      "method": "GET",
      "auth": false,
      "description": "Get FAQ list"
    },
    {
      "path": "/api/ai/:tool/generate",
      "method": "POST",
      "auth": true,
      "description": "Generate AI content (reels, avatar, images, voiceover, subtitles, memes)",
      "body": {
        "prompt": "string",
        "options": "object"
      }
    },
    {
      "path": "/api/studio/:tool/job",
      "method": "POST",
      "auth": true,
      "description": "Create studio job"
    },
    {
      "path": "/api/jobs/:id",
      "method": "GET",
      "auth": true,
      "description": "Get job status"
    }
  ]
}

