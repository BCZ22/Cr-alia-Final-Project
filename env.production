# =============================================================================
# ENVIRONNEMENT DE PRODUCTION CREALIA
# =============================================================================

# Configuration de l'application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Sécurité
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
API_KEY=your-super-secure-api-key-here-change-in-production
SESSION_SECRET=your-super-secure-session-secret-here-change-in-production

# Base de données MongoDB
MONGO_URI=mongodb://mongo:27017/crealia
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-super-secure-mongo-password-here-change-in-production
MONGO_DATABASE=crealia

# Cache Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-super-secure-redis-password-here-change-in-production
REDIS_DB=0

# Stockage
STORAGE_PATH=/app/uploads
STORAGE_MAX_SIZE=10737418240
STORAGE_ALLOWED_TYPES=mp4,avi,mov,wmv,flv,webm,mkv,jpg,jpeg,png,gif,bmp,webp,svg

# IA et traitement vidéo
AI_MODEL=gpt-4
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7
VIDEO_MAX_DURATION=3600
VIDEO_MAX_RESOLUTION=3840x2160

# Monitoring et logs
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION=30

# Grafana
GRAFANA_PASSWORD=your-super-secure-grafana-password-here-change-in-production

# Limites et performance
MAX_CONCURRENT_UPLOADS=100
MAX_CONCURRENT_PROCESSING=50
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Sécurité avancée
CORS_ORIGIN=https://yourdomain.com
CSRF_ENABLED=true
HELMET_ENABLED=true
RATE_LIMITING_ENABLED=true

# Backup et récupération
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION=7

# Alertes
ALERT_EMAIL=admin@yourdomain.com
ALERT_WEBHOOK=https://hooks.slack.com/services/your-webhook-url




